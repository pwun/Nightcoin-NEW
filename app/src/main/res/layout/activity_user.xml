<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/material_blue_grey_800"
    tools:context="de.nightcoin.ActivityUser">

    <Button
        android:id="@+id/buttonUserActivityDashboard"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:text="Dashboard"/>

    <Button
        android:id="@+id/buttonUserActivityEditCoins"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonUserActivityDashboard"
        android:text="Coins bearbeiten"/>

    <Button
        android:id="@+id/buttonUserActivityEditEvents"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonUserActivityEditCoins"
        android:text="Events bearbeiten"/>

    <Button
        android:id="@+id/buttonUserActivityEditImages"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonUserActivityEditEvents"
        android:text="Bilder bearbeiten"/>

    <Button
        android:id="@+id/buttonUserActivityEditWeekplan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonUserActivityEditImages"
        android:text="Wochenprogramm bearbeiten"/>

    <Button
        android:id="@+id/buttonUserActivityEditPhone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonUserActivityEditWeekplan"
        android:text="Telefonnummer bearbeiten"/>

<!--    <Button
        android:id="@+id/buttonUserActivityPurchasePush"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonUserActivityEditPhone"
        android:text="Gesponserte Push-Nachricht kaufen"/>-->


</RelativeLayout>
