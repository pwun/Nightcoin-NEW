<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBackground"
    tools:context="de.nightcoin.ActivityMain">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="4dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.05">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/black_alpha_2">

                <Button
                    android:id="@+id/buttonMainCoins"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/nightcoins_main_act_button_bg" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginTop="4dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/bars_thumbnail"
                android:layout_marginRight="2dp">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView1"
                    android:background="@color/black_alpha_2" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView2"
                    android:background="@drawable/bar_icon"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="55dp"
                    android:layout_marginBottom="50dp" />

                <Button
                    android:id="@+id/buttonMainBars"
                    android:textColor="@color/white"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="Bars"
                    android:gravity="center_horizontal|bottom"
                    android:background="@color/transparent"
                    android:paddingBottom="15dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/clubs_thumbnail"
                android:gravity="bottom"
                android:layout_marginLeft="2dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView3"
                android:background="@color/black_alpha_2" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView4"
                android:background="@drawable/clubs_icon"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="55dp"
                android:layout_marginBottom="50dp" />
            <Button
                android:id="@+id/buttonMainClubs"
                android:textColor="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Clubs"
                android:background="@color/transparent"
                android:layout_weight="1"
                android:gravity="center_horizontal|bottom"
                android:paddingBottom="15dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginTop="4dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/taxi_thumbnail"
                android:layout_marginRight="2dp">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView5"
                    android:background="@color/black_alpha_2" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView"
                    android:background="@drawable/taxi_icon"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="55dp"
                    android:layout_marginBottom="50dp" />

                <Button
                    android:id="@+id/buttonMainTaxi"
                    android:textColor="@color/white"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="Taxi"
                    android:background="@color/transparent"
                    android:paddingBottom="15dp"
                    android:gravity="center_horizontal|bottom" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/food_thumbnail"
                android:layout_marginLeft="2dp">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView6"
                    android:background="@color/black_alpha_2" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView7"
                    android:background="@drawable/food_icon"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="55dp"
                    android:layout_marginBottom="50dp" />

                <Button
                    android:id="@+id/buttonMainFood"
                    android:textColor="@color/white"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="Food"
                    android:background="@color/transparent"
                    android:paddingBottom="15dp"
                    android:gravity="center_horizontal|bottom" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginTop="4dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/events_thumbnail"
                android:layout_marginRight="2dp">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView8"
                    android:background="@color/black_alpha_2" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView9"
                    android:background="@drawable/events_icon"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="55dp"
                    android:layout_marginBottom="50dp" />

                <Button
                    android:id="@+id/buttonMainEvents"
                    android:textColor="@color/white"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="Events"
                    android:background="@color/transparent"
                    android:gravity="center_horizontal|bottom"
                    android:paddingBottom="15dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/favorites_thumbnail"
                android:layout_marginLeft="2dp">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView10"
                    android:background="@color/black_alpha_2" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView11"
                    android:background="@drawable/favorites_icon"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="55dp"
                    android:layout_marginBottom="50dp" />

                <Button
                    android:id="@+id/buttonMainFavorites"
                    android:textColor="@color/white"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="Favoriten"
                    android:background="@color/transparent"
                    android:paddingBottom="15dp"
                    android:gravity="center_horizontal|bottom" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
