<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.nightcoin.ActivityEventItemView" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.parse.ParseImageView
                    android:id="@+id/imageViewEventItemView"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/textViewEventItemViewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignBottom="@+id/imageViewEventItemView"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:background="@color/black_alpha"
                    android:textColor="@color/white"
                    android:textSize="22dp"
                    android:text="Title" />

                <TextView
                    android:id="@+id/textViewEventItemViewLocation"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Location"
                    android:layout_below="@+id/textViewEventItemViewTitle"
                    android:layout_marginTop="7dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/textViewEventItemViewDate"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Datum"
                    android:layout_below="@+id/textViewEventItemViewLocation"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/textViewEventItemViewPrice"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Eintritt"
                    android:layout_below="@+id/textViewEventItemViewDate"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:id="@+id/buttonEventItemViewFilteredCoins"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="20dp"
                    android:background="@color/black_alpha"
                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Coins an diesem Tag"
                    android:layout_below="@+id/textViewEventItemViewPrice"
                     />
<!--
                <Button
                    android:id="@+id/buttonEventItemViewReservateTicket"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:text="Reservierung mÃ¶glich"
                    android:layout_below="@+id/buttonEventItemViewFilteredCoins"
                    android:paddingLeft="10dp" />
-->
                <TextView
                    android:id="@+id/textViewEventItemViewDescriptionTitle"
                    android:text="Beschreibung"
                    android:layout_below="@+id/buttonEventItemViewFilteredCoins"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="20dp"
                    android:background="@color/black_alpha"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp" />

                <TextView
                    android:id="@+id/textViewEventItemViewDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Beschreibung"
                    android:layout_below="@+id/textViewEventItemViewDescriptionTitle"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
