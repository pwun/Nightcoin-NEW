<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/darkBackground"
    tools:context="de.nightcoin.ActivityEditCoin">

    <EditText
        android:id="@+id/editTextActivityEditCoinsDate"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="@color/white"
        android:gravity="center"/>

    <DatePicker
        android:id="@+id/datePickerActivityEditCoins"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@+id/editTextActivityEditCoinsDate"
        android:layout_centerHorizontal="true"
        android:background="@color/primary_material_light">
        </DatePicker>

    <EditText
        android:id="@+id/editTextActivityEditCoinsValue"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/datePickerActivityEditCoins"
        android:textColor="@color/white"
        android:gravity="center"/>

    <EditText
        android:id="@+id/editTextActivityEditCoinsAmount"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/editTextActivityEditCoinsValue"
        android:textColor="@color/white"
        android:gravity="center"/>

    <Button
        android:id="@+id/buttonActivityEditCoinsSave"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/editTextActivityEditCoinsAmount"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Coin speichern"/>


</RelativeLayout>
